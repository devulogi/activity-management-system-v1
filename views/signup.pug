extends layout

block content
    form(action='/signup' method='post')
        .form-group.mb-3
            label.form-label(for='username') Username
            input#username.form-control(type='text' name='username' placeholder='Username' aria-required='true' required)
        .form-group.mb-3
            label.form-label(for='password') Password
            input#password.form-control(type='password' name='password' placeholder='Password' aria-required='true' required)
        .form-group.mb-3
            label.form-label(for='password2') Confirm Password
            input#password2.form-control(type='password' name='password2' placeholder='Confirm Password' aria-required='true' required)
        .form-group.mb-3
            button.btn.btn-primary(type='submit') Sign Up
        p Already have an account?
            a.ps-1(href='/login') Login