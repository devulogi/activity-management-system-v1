extends layout

block content
    form(action='/signup' method='post')
        .form-group.mb-3
            label.form-label(for='username') Username
            input#username.form-control(type='text' name='username' placeholder='Username' aria-required='true' required)
        .form-group.mb-3
            label.form-label(for='email') Email
            input#email.form-control(type='email' name='email' placeholder='Email' aria-required='true' required)
        .form-group.mb-3
            label.form-label(for='password') Password
            input#password.form-control(type='password' name='password' placeholder='Password' aria-required='true' required)
        .form-group.mb-3
            label.form-label(for='password2') Confirm Password
            input#password2.form-control(type='password' name='password2' placeholder='Confirm Password' aria-required='true' required)
        .form-group.mb-3
            label.form-label(for='role') Role
            select#role.form-select(name='role' aria-required='true' required)
                option(value='user') User
                option(value='participant') Participant
                option(value='admin') Admin
        .form-group.mb-3
            button.btn.btn-primary(type='submit') Sign Up
        p Already have an account?
            a.ps-1(href='/login') Login